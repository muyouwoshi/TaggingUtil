<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tag_name"
        android:layout_width="480px"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:layout_below="@+id/tag_name"
        android:id="@+id/tag_image"
        android:layout_width="480px"
        android:layout_height="640px" />

    <TextView
        android:id="@+id/tag"
        android:width="400px"
        android:layout_below="@id/tag_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/common_round_dark_transparent"
        android:padding="3dp"
        android:layout_margin="3dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/red"/>

    <TextView
        android:id="@+id/is_base_tv"
        android:width="400px"
        android:layout_alignBottom="@+id/tag_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/common_round_dark_transparent"
        android:padding="3dp"
        android:layout_margin="3dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="底库"
        android:visibility="gone"
        android:textColor="@color/txt_color_green"/>


</RelativeLayout>